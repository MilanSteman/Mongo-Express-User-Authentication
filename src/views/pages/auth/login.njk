{% extends "layouts/layout.njk" %}
{% block title %}
    Login
{% endblock %}
{% block content %}
    <section class='login'>
        <section class='information'>
            <h1>Login</h1>
            <form action='/login' method='post'>
                <div class='wrapper'>
                    <label for='username'>Username</label>
                    <input id='username' type='text' name='username' required maxlength='20' placeholder='Your username...'/>
                </div>
                <div class='wrapper'>
                    <label for='password'>Password</label>
                    <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'/>
                </div>
                <button type='submit'>Login</button>
                <a href='/register'>Don't have an account?</a>
            </form>
        </section>
    </section>
{% endblock %}
